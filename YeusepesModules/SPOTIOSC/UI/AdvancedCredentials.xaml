<UserControl x:Class="YeusepesModules.SPOTIOSC.UI.AdvancedCredentials"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <StackPanel Margin="20">
        <!-- Header Toggle -->
        <Button x:Name="ToggleButton"
                Click="ToggleButton_Click"
                Margin="10,5"
                Padding="8"
                Background="Transparent"
                BorderBrush="Transparent"
                Foreground="White"
                HorizontalContentAlignment="Stretch"
                FocusVisualStyle="{x:Null}">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Stretch"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Advanced Credentials"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Foreground="White"
                           Grid.Column="0"/>
                <TextBlock x:Name="ArrowIcon"
                           Text="▼"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="White"
                           Grid.Column="1"/>
            </Grid>
        </Button>

        <!-- Collapsible Panel -->
        <StackPanel x:Name="Panel" Visibility="Collapsed" Margin="10">
            <!-- Access Token -->
            <TextBlock Text="Access Token:" FontWeight="SemiBold" Foreground="White"/>
            <Grid Margin="0,4,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="AccessTokenBorder"
                        Grid.Column="0"
                        Background="#1E1E1E"
                        BorderBrush="#333333"
                        CornerRadius="6"
                        Padding="6"
                        MouseEnter="AccessTokenBorder_MouseEnter"
                        MouseLeave="TokenBorder_MouseLeave">
                    <TextBlock x:Name="AccessTokenText"
                               Text="••••••••••••••••"
                               FontFamily="Consolas"
                               Foreground="White"
                               TextWrapping="NoWrap"/>
                </Border>
                <Button Grid.Column="1"
                        Content="Copy"
                        Click="CopyAccessToken_Click"
                        Background="#1E1E1E"
                        BorderBrush="#333333"
                        BorderThickness="1"
                        Foreground="White"
                        Padding="4,2"
                        Margin="10,0,6,0"/>
            </Grid>

            <Separator Margin="0,12,0,12"/>

            <!-- Client Token -->
            <TextBlock Text="Client Token:" FontWeight="SemiBold" Foreground="White"/>
            <Grid Margin="0,4,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="ClientTokenBorder"
                        Grid.Column="0"
                        Background="#1E1E1E"
                        BorderBrush="#333333"
                        CornerRadius="6"
                        Padding="6"
                        MouseEnter="ClientTokenBorder_MouseEnter"
                        MouseLeave="TokenBorder_MouseLeave">
                    <TextBlock x:Name="ClientTokenText"
                               Text="••••••••••••••••"
                               FontFamily="Consolas"
                               Foreground="White"
                               TextWrapping="NoWrap"/>
                </Border>
                <Button Grid.Column="1"
                        Content="Copy"
                        Click="CopyClientToken_Click"
                        Background="#1E1E1E"
                        BorderBrush="#333333"
                        BorderThickness="1"
                        Foreground="White"
                        Padding="4,2"
                        Margin="10,0,6,0"/>
            </Grid>

            <Separator Margin="0,12,0,12"/>

            <!-- API Access Token -->
            <TextBlock Text="API Interaction Token:" FontWeight="SemiBold" Foreground="White"/>
            <Grid Margin="0,4,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="ApiAccessTokenBorder"
                        Grid.Column="0"
                        Background="#1E1E1E"
                        BorderBrush="#333333"
                        CornerRadius="6"
                        Padding="6"
                        MouseEnter="ApiAccessTokenBorder_MouseEnter"
                        MouseLeave="TokenBorder_MouseLeave">
                    <TextBlock x:Name="ApiAccessTokenText"
                               Text="••••••••••••••••"
                               FontFamily="Consolas"
                               Foreground="White"
                               TextWrapping="NoWrap"/>
                </Border>
                <Button Grid.Column="1"
                        Content="Copy"
                        Click="CopyApiAccessToken_Click"
                        Background="#1E1E1E"
                        BorderBrush="#333333"
                        BorderThickness="1"
                        Foreground="White"
                        Padding="4,2"
                        Margin="10,0,6,0"/>
            </Grid>
        </StackPanel>
    </StackPanel>
</UserControl>
