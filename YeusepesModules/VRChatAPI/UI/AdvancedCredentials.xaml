<UserControl x:Class="YeusepesModules.VRChatAPI.UI.AdvancedCredentials"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <UserControl.Resources>
        <Style TargetType="Button" x:Key="ToggleButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Stretch"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A2A2A"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1A1A1A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="CopyButtonStyle">
            <Setter Property="Background" Value="#383838"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A4A4A"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2A2A2A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="20">
        <!-- Header Toggle -->
        <Button x:Name="ToggleButton"
                Click="ToggleButton_Click"
                Margin="10,5"
                Padding="12,8"
                Style="{StaticResource ToggleButtonStyle}"
                HorizontalContentAlignment="Stretch"
                FocusVisualStyle="{x:Null}">
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Advanced Credentials"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Grid.Column="0"/>
                <TextBlock x:Name="ArrowIcon"
                           Text="▼"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="#CCCCCC"
                           Grid.Column="1"/>
            </Grid>
        </Button>

        <!-- Collapsible Panel -->
        <StackPanel x:Name="Panel" 
                    Visibility="Collapsed" 
                    Margin="10,0,10,10">
            <!-- Auth Token Section -->
            <Border Background="#1E1E1E"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Authentication Token" 
                               FontWeight="SemiBold" 
                               Foreground="White"
                               FontSize="14"
                               Margin="0,0,0,8"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border x:Name="AuthTokenBorder"
                                Grid.Column="0"
                                Background="#2A2A2A"
                                BorderBrush="#444444"
                                CornerRadius="6"
                                Padding="12"
                                MouseEnter="AuthTokenBorder_MouseEnter"
                                MouseLeave="TokenBorder_MouseLeave">
                            <TextBlock x:Name="AuthTokenText"
                                       Text="••••••••••••••••"
                                       FontFamily="Consolas"
                                       Foreground="White"
                                       TextWrapping="NoWrap"
                                       FontSize="12"/>
                        </Border>
                        
                        <Button Grid.Column="1"
                                Content="Copy"
                                Click="CopyAuthToken_Click"
                                Style="{StaticResource CopyButtonStyle}"
                                Margin="10,0,0,0"/>
                    </Grid>
                    
                    <TextBlock Text="This token is used to authenticate with the VRChat API. Keep it secure and don't share it with others."
                               FontSize="11"
                               Foreground="#CCCCCC"
                               TextWrapping="Wrap"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- API Status Section -->
            <Border Background="#1E1E1E"
                    CornerRadius="8"
                    Padding="16">
                <StackPanel>
                    <TextBlock Text="API Status" 
                               FontWeight="SemiBold" 
                               Foreground="White"
                               FontSize="14"
                               Margin="0,0,0,8"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Ellipse x:Name="StatusIndicator"
                                 Width="12" Height="12"
                                 Fill="#FF4444"
                                 Grid.Column="0"
                                 VerticalAlignment="Center"
                                 Margin="0,0,8,0"/>
                        
                        <TextBlock x:Name="StatusText"
                                   Text="Not Connected"
                                   Foreground="White"
                                   FontSize="12"
                                   Grid.Column="1"
                                   VerticalAlignment="Center"/>
                    </Grid>
                    
                    <TextBlock Text="The API connection status is automatically monitored. Green indicates a successful connection."
                               FontSize="11"
                               Foreground="#CCCCCC"
                               TextWrapping="Wrap"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </StackPanel>
</UserControl>